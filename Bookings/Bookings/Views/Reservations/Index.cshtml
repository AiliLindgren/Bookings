@model Bookings.Models.ViewModels.ReservationsIndexVM[]
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <h3>Reservations</h3>
    <ul>
        @foreach (var item in Model)
        {
            <li>Booking for: @item.NumberOfPeople Date: @item.StartDateTime.Date.ToString("d.M.yyyy") Time: @item.StartDateTime.Date.ToString("hh:mm") Your contact: @item.Contact </li>

        }
    </ul>
    <a asp-controller="Reservations" asp-action="create">Make a booking!</a>

</body>
</html>